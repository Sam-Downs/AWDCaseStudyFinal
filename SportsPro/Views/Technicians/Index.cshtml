@model List<Technician>
@{
	ViewData["Title"] = "Sports Pro";
	Layout = "_Layout";
}

<div class="container">
    <div class="row mt-4">
        <!-- Added margin top -->
        <div class="col-md-10 col-lg-8 mx-auto">
            @if (TempData.Keys.Contains("message"))
            {
                <div class="alert alert-success" role="alert">
                    @TempData["message"]
                </div>
            }

            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var technician in Model)
                    {
                        <tr>
                            <td>@technician.Name</td>
                            <td>@technician.Email</td>
                            <td>@technician.PhoneNumber</td>
                            <td>
                                <a class="btn btn-primary" asp-controller="Technicians" asp-action="Edit" asp-route-id="@technician.TechnicianId" asp-route-slug="@technician.Slug">Edit</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-controller="Technicians" asp-action="Delete" asp-route-id="@technician.TechnicianId" asp-route-slug="@technician.Slug">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="mb-4">
                <a class="btn btn-primary" asp-controller="Technicians" asp-action="Add">Add New Technician</a> <!-- Applied the color -->
            </div>
        </div>
    </div>
</div>

