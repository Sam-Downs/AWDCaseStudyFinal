@model RegistrationViewModel
@{
    ViewData["Title"] = "Select Customer";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mt-4 text-center">Select Customer</h2>
            <form asp-action="GetCustomer" method="post" class="mt-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Customer.CustomerID">Customer</label>
                    <select asp-for="Customer.CustomerID" asp-items="@(new SelectList(Model.Customers, "CustomerID", "FullName"))" class="form-control">
                        <option value="">-- Select a customer --</option>
                    </select>
                    <span asp-validation-for="Customer.CustomerID" class="text-danger d-block"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-2 d-block mx-auto">Submit</button>
            </form>
        </div>
    </div>
</div>

